<?xml version="1.0"?>
<robot name="trx_s" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:property name="M_PI" value="3.1415926535897931" />
<xacro:macro name="trx_s" params="prefix:=r reflect:=1 disable_mesh:=false">

<!-- hand -->
  <link name="${prefix}_hand_link">
    <visual>
      <geometry>
        <mesh filename="package://trx_s_ros_pkg/urdf/meshes/hand.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} 0 ${reflect * M_PI / 2.0}"/>
    </visual>
  </link>
<!-- hand index base -->
  <link name="${prefix}_indexbase_link">
    <visual>
      <geometry>"
        <mesh filename="package://trx_s_ros_pkg/urdf/meshes/index_base.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} -0.57 ${reflect * M_PI / 2.0}"/>
    </visual>
  </link>


  <joint name="${prefix}_indexbase_joint" type="continuous">
    <parent link="${prefix}_hand_link"/>
    <child  link="${prefix}_indexbase_link"/>
    <origin xyz="0 0 -0.087" rpy="0 -0 0"/>
    <axis   xyz="1 0 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="25" velocity="0.5" />
  </joint>
<!-- hand index middle -->
  <link name="${prefix}_indexmid_link">
    <visual>
      <geometry>
        <mesh filename="package://trx_s_ros_pkg/urdf/meshes/index_mid.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} -0.57 ${reflect * M_PI / 2.0}"/>
    </visual>
  </link>
  <joint name="${prefix}_indexmid_joint" type="continuous">
    <parent link="${prefix}_indexbase_link"/>
    <child  link="${prefix}_indexmid_link"/>
    <origin xyz="0 0 -0.045" rpy="0 0.52 0 "/>
    <axis   xyz="1 0 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="25" velocity="0.5" />

  </joint>
<!-- hand index end -->
  <link name="${prefix}_indexend_link">
    <visual>
      <geometry>
        <mesh filename="package://trx_s_ros_pkg/urdf/meshes/index_end.DAE"/>
      </geometry>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
    </visual>
  </link>
  <joint name="${prefix}_indexend_joint" type="continuous">
    <parent link="${prefix}_indexmid_link"/>
    <child  link="${prefix}_indexend_link"/>
    <origin xyz="-0.0 0 0.0" rpy="0 0 0 "/>
    <axis   xyz="1 0 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="25" velocity="0.5" />

  </joint>
<!-- hand finger -->
  <link name="${prefix}_thumb_link">
    <visual>
      <geometry>
        <mesh filename="package://trx_s_ros_pkg/urdf/meshes/thumb.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0 "/>
    </visual>
  </link>
  <joint name="${prefix}_thumb_joint" type="revolute">
    <parent  link="${prefix}_hand_link"/>
    <child  link="${prefix}_thumb_link"/>
    <origin xyz="0.023 0 -0.054" rpy="${M_PI} 0+1 ${reflect * M_PI / 2.0}"/>
    <axis   xyz="1 0 0"/>
    <limit lower="-3.14159" upper="3.14159" effort="25" velocity="0.5" />

  </joint>
  </xacro:macro>
</robot>
