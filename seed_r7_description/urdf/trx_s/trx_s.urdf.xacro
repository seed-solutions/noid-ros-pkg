<?xml version="1.0"?>
<robot name="trx_s" xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:property name="M_PI" value="3.1415926535897931" />
<xacro:macro name="trx_s" params="prefix:=r reflect:=1 disable_mesh:=false">
<!-- hand -->
  <link name="${prefix}_hand_link">
    <visual>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/trx_s/hand.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} 0 ${reflect * M_PI / 2.0}"/>
    </visual>
    <xacro:unless value="${disable_mesh}">
    <collision>
     <origin rpy="${reflect * 0.7} 0 0" xyz="0 0 -0.075"/>
     <geometry>
       <box size="0.036 0.070 0.030" />
     </geometry>
    </collision>
    <collision>
     <origin rpy="0 0 0" xyz="0 0 -0.036"/>
     <geometry>
      <box size="0.036 0.050 0.070" />
     </geometry>
    </collision>
    </xacro:unless>
    <inertial>
      <mass value="0.183" />
      <origin xyz="0 0 -0.0875" rpy="0 0 0" />
      <inertia ixx="0.000601" ixy="0" ixz="0" iyy="0.00055" iyz="0" izz="0.000102" />
    </inertial>
  </link>
<!-- hand index base -->
  <link name="${prefix}_indexbase_link">
    <visual>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/trx_s/index_base.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} 0 ${reflect * M_PI / 2.0}"/>
    </visual>
    <xacro:unless value="${disable_mesh}">
    <collision>
     <origin xyz="0 0 -0.02141" rpy="${M_PI / 2.0} 0 0"/>
     <geometry>
      <box size="0.041 0.061 0.010" />
     </geometry>
    </collision>
    </xacro:unless>
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 ${reflect * 0.014} -0.021" rpy="0 0 0" />
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>

  <joint name="${prefix}_indexbase_joint" type="continuous">
    <parent link="${prefix}_hand_link"/>
    <child  link="${prefix}_indexbase_link"/>
    <origin xyz="0 ${-0.013*reflect} -0.087" rpy="${reflect * 0.75} 0 0"/>
    <axis   xyz="1 0 0"/>
    <limit lower="-0.87" upper="0.87" effort="25" velocity="0.5" />
  </joint>
<!-- hand index middle -->
  <link name="${prefix}_indexmid_link">
    <visual>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/trx_s/index_mid.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} 0 ${reflect * M_PI / 2.0}"/>
    </visual>
    <xacro:unless value="${disable_mesh}">
    <collision>
      <origin xyz="0 0 -0.008" rpy="${M_PI / 2.0} 0 0"/>
      <geometry>
        <box size="0.034 0.030 0.010" />
      </geometry>
    </collision>
    </xacro:unless>
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 ${reflect * 0.014} -0.008" rpy="0 0 0" />
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>
  <joint name="${prefix}_indexmid_joint" type="continuous">
    <parent link="${prefix}_indexbase_link"/>
    <child  link="${prefix}_indexmid_link"/>
    <origin xyz="0 0 -0.045" rpy="${0.52*reflect} 0 0 "/>   
    <axis   xyz="1 0 0"/>
    <limit lower="-0.87" upper="0.87" effort="25" velocity="0.5" />
  </joint>
<!-- hand index end -->
  <link name="${prefix}_indexend_link">
    <visual>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/trx_s/index_end.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} 0 ${reflect * M_PI / 2.0}"/>
    </visual>
  <xacro:unless value="${disable_mesh}">
  <collision>
    <origin xyz="0 ${reflect * 0.013} 0.004" rpy="0 0 0"/>
    <geometry>
      <box size="0.040 0.028 0.016" />
    </geometry>
  </collision>
  </xacro:unless>
  <inertial>
      <mass value="0.1" />
      <origin xyz="0 ${reflect * 0.02} 0" rpy="0 0 0" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>
  <joint name="${prefix}_indexend_joint" type="continuous">
    <parent link="${prefix}_indexmid_link"/>
    <child  link="${prefix}_indexend_link"/>
    <origin xyz="0 ${-0.005*reflect} -0.025" rpy="${-1.13*reflect} 0 0 "/>
    <axis   xyz="1 0 0"/>
    <limit lower="-0.87" upper="0.87" effort="25" velocity="0.5" />
  </joint>
<!-- hand finger -->
  <link name="${prefix}_thumb_link">
    <visual>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/trx_s/thumb.DAE"/>
      </geometry>
      <origin xyz="0 0 0" rpy="${M_PI} 0 ${reflect * M_PI / 2.0}"/>
    </visual>
    <xacro:unless value="${disable_mesh}">
    <collision>
      <origin xyz="0.0 ${reflect * 0.019645} 0.01" rpy="${reflect * -1.6} 0 0" />
      <geometry>
        <box size="0.012 0.008 0.050" />
      </geometry>
    </collision>
    <collision>
      <origin xyz="0.0 ${reflect * 0.057} 0.0" rpy="${reflect * -2.0} 0 0" />
      <geometry>
        <box size="0.012 0.008 0.050" />
      </geometry>
    </collision>
    </xacro:unless>
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 ${reflect * 0.05} -0.06" rpy="0 0 0" />
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>
  <joint name="${prefix}_thumb_joint" type="revolute">
    <parent  link="${prefix}_hand_link"/>
    <child  link="${prefix}_thumb_link"/>
    <origin xyz="0 ${0.023*reflect} -0.054" rpy="${-0.75 * reflect}  0 0"/>
    <axis   xyz="1 0 0"/>
    <limit lower="-0.87" upper="0.87" effort="25" velocity="0.5" />
  </joint>
  <link name="${prefix}_eef_grasp_link"/>

   <!-- for ik eef connector-->
  <joint name="${prefix}_eef_grasp_joint" type="fixed">
    <parent  link="${prefix}_hand_link"/>
    <child link="${prefix}_eef_grasp_link"/>
    <origin xyz="0.0 ${0.04 * reflect} -0.14" rpy="0 1.5708 0 "/>
  </joint>
  </xacro:macro>
</robot>